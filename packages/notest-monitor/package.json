{
  "name": "notest-monitor",
  "version": "1.0.0",
  "description": "NoTest monitoring and instrumentation to create automatic unit tests",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "notest": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "node esbuild",
    "build:watch": "node esbuild -w",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ts-morph": "^14.0.0",
    "@butopen/notest-collector": "workspace:*",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "esbuild": "^0.14.25",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
